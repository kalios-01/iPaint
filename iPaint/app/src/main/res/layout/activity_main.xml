<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_border"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_pink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn"
            android:tint="@color/pink" />
        <ImageView
            android:id="@+id/btn_yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn"
            android:tint="@color/yellow" />
        <ImageView
            android:id="@+id/btn_orange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn"
            android:tint="@color/orange" />
        <ImageView
            android:id="@+id/btn_peach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn"
            android:tint="@color/light_peach" />

        <ImageView
            android:id="@+id/btn_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn"
            android:tint="@color/red" />

        <ImageView
            android:id="@+id/btn_brown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn"
            android:tint="@color/brown"/>

        <ImageView
            android:id="@+id/btn_light_green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/light_green"
            app:srcCompat="@drawable/btn" />

        <ImageView
            android:id="@+id/btn_deep_green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/deep_green"
            app:srcCompat="@drawable/btn" />
        <ImageView
            android:id="@+id/btn_sky_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/sky_blue"
            app:srcCompat="@drawable/btn" />
        <ImageView
            android:id="@+id/btn_deep_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/deep_blue"
            app:srcCompat="@drawable/btn" />
        <ImageView
            android:id="@+id/btn_violet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/violet"
            app:srcCompat="@drawable/btn" />
        <ImageView
            android:id="@+id/btn_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/black"
            app:srcCompat="@drawable/btn" />

        <ImageView
            android:id="@+id/btn_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/white"
            app:srcCompat="@drawable/btn" />

        <ImageView
            android:id="@+id/btn_eraser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_eraser" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <include layout="@layout/paint_view" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>